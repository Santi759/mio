import java.util.Scanner;
public class Coche {
    Scanner sc = new Scanner(System.in);
    private String marca;
    private String modelo;
    private int AnoFabricacion;
    private int acelerar;
    private int frenar;
    public void init(String mar,String mod, int aF){
        marca=mar;
        modelo=mod;
        AnoFabricacion=aF;
    }
    public String DatosCoche(){
        return "Marca: "+marca+" Modelo: "+modelo+" Año de Fabricación: "+AnoFabricacion;
    }
    public int aceleracion(){
        acelerar= sc.nextInt();
        return acelerar;
    }
    public int frenos(){
        frenar= sc.nextInt();
        return acelerar-frenar;
    }
}
